TOPDIR=../../../

include $(TOPDIR)/build/target.mk

CFLAGS+=-Werror -Wno-expansion-to-defined -Wno-null-pointer-arithmetic -Wno-tautological-constant-compare
VPATH=src

SRCS=math.c \
	stdio.c \
	string.c \
	dlmalloc.c \
	cxx_runtime.cpp \
	stdlib.c \
	qsort.c \
	setjmp.s \
	time.c \
	vfprintf.c \
	memcpy.s \
	memset.c \
	memcmp.c \

OBJS := $(SRCS_TO_OBJS)
DEPS := $(SRCS_TO_DEPS)

all: $(OBJ_DIR) libc.a

libc.a: $(OBJS) $(DEPS)
	$(AR) r $@ $(OBJS)

clean:
	rm -rf $(OBJ_DIR)
	rm -f libc.a

$(OBJ_DIR): FORCE
	mkdir -p $(OBJ_DIR)

FORCE:

-include $(DEPS)
